<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.LoginController">
   <children>
      <Label fx:id="applicationGreeting" layoutX="79.0" layoutY="45.0" text="Customer Integration Portal">
         <font>
            <Font size="36.0" />
         </font>
      </Label>
      <VBox layoutX="14.0" layoutY="230.0" prefHeight="148.0" prefWidth="570.0">
         <children>
            <HBox prefHeight="51.0" prefWidth="570.0">
               <children>
                  <Label fx:id="usernameLabel" prefHeight="45.0" prefWidth="162.0" text="Username:">
                     <padding>
                        <Insets left="30.0" />
                     </padding>
                  </Label>
                  <Label fx:id="passwordLabel" prefHeight="48.0" prefWidth="182.0" text="Password:">
                     <padding>
                        <Insets left="30.0" />
                     </padding>
                  </Label>
               </children>
            </HBox>
            <HBox prefHeight="92.0" prefWidth="570.0">
               <children>
                  <TextField fx:id="usernameField">
                     <HBox.margin>
                        <Insets left="10.0" right="10.0" top="15.0" />
                     </HBox.margin>
                  </TextField>
                  <PasswordField fx:id="passwordField">
                     <HBox.margin>
                        <Insets left="10.0" right="10.0" top="15.0" />
                     </HBox.margin>
                  </PasswordField>
                  <Button fx:id="loginButton" mnemonicParsing="false" onAction="#loginButtonClick" text="Login">
                     <HBox.margin>
                        <Insets left="60.0" top="15.0" />
                     </HBox.margin>
                  </Button>
               </children>
               <VBox.margin>
                  <Insets top="30.0" />
               </VBox.margin>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
